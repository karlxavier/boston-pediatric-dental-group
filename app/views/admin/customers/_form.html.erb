<br>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">

        <% if @customer.errors.any? %>
          <div class="alert alert-danger alert-dismissable">
              <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
              <ul style="margin-bottom: 0;">
                <% @customer.errors.full_messages.each do |error_message| %>
                  <li>
                    <%= error_message %> <br />
                  </li>
                <% end %>
              </ul>
          </div>  
        <% end %>
        
        <%= form_for [:admin, @customer], html: { class: "form-horizontal" } do |f| %>

          <div class="form-group">
              <label class="col-sm-2 control-label">Name</label>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Emails</label>
            <div class="col-sm-10" id="customer_emails">
              <%= f.fields_for :customer_emails do |customer_email| %>
                <%= render 'customer_email_fields', f: customer_email %>
              <% end %>

              <div class="form-group" style="margin: 0;">
                <div class="col-sm-12" style="margin: 0;">
                  <%= link_to_add_association 'Add Email', f, :customer_emails, class: "btn btn-primary btn-sm pull-right" %>
                </div>
              </div>
            </div>

          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Phone</label>
              <div class="col-sm-10">
                <%= f.text_field :phone, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Website</label>
              <div class="col-sm-10">
                <%= f.text_field :website, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Active</label>
              <div class="col-sm-10">
                <%= f.check_box :active, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Brand</label>
            <div class="col-sm-10">
               <%= f.collection_select( :brand_id, Brand.all, :id, :name, {include_blank: true}, {id: "brand_selection", class: "chosen-select"})%>
            </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Owned By</label>
            <div class="col-sm-10">
               <%= f.collection_select( :owned_by, User.all, :id, :full_name, {include_blank: true}, {id: "owned_by_selection", class: "chosen-select"})%>
            </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Manage By</label>
            <div class="col-sm-10">
               <%= f.collection_select( :manage_by, User.all, :id, :full_name, {include_blank: true}, {id: "manage_by_selection", class: "chosen-select"})%>
            </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Bill 1</label>
              <div class="col-sm-10">
                <%= f.text_field :bill_1, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Bill 2</label>
              <div class="col-sm-10">
                <%= f.text_field :bill_2, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Ship 1</label>
              <div class="col-sm-10">
                <%= f.text_field :ship_1, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Ship 2</label>
              <div class="col-sm-10">
                <%= f.text_field :ship_2, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">PO Required</label>
              <div class="col-sm-10">
                <%= f.check_box :po_required, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Admin</label>
              <div class="col-sm-10">
                <%= f.check_box :admin, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Payment Terms</label>
              <div class="col-sm-10">
                <%= f.text_field :terms, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Sales Tax Code</label>
              <div class="col-sm-10">
                <%= f.text_field :sales_tax_code, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Tax Item</label>
              <div class="col-sm-10">
                <%= f.text_field :tax_item, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Notes</label>
              <div class="col-sm-10">
                <%= f.text_field :notes, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                  <%= link_to 'Cancel', admin_customers_path, class: "btn btn-white" %>
                  <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                    Save changes
                  <% end %> 
              </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    $('.chosen-select').chosen({width: "100%"});
  })
</script>