<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Brands</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Dashboard', admin_root_path %>
            </li>
            <li>
                <%= link_to 'Brands List', admin_brands_path %>
            </li>
            <li class="active">
                <strong><%= @brand.name %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
                <div class="col-lg-12">

                    <div class="ibox product-detail">
                        <div class="ibox-content" style="padding-bottom: 20px;">

                            <div class="row">
                                <div class="col-md-12">

                                    <h2 class="font-bold m-b-xs">
                                        <%= @brand.name %>
                                    </h2>
                                    <div>
                                        <div class="btn-group">
                                            <%= link_to edit_admin_brand_path(@brand), class: "btn btn-primary btn-xs" do %>
                                                <i class="fa fa-pencil"></i> Edit Brand
                                            <% end %>
                                            <%= link_to admin_brands_path, class: "btn btn-white btn-xs" do %>
                                                <i class="fa fa-bars"></i> Back to List
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="ibox">
                        <div class="ibox-title text-info">
                            Associated Users
                        </div>
                        <div class="ibox-content">
                            <div class="table-responsive" style="overflow: visible;">
                                <%= form_for [:admin, @users_brand], remote: true do |f| %>
                                    <dl class="dl-horizontal">
                                        <dt>
                                            <small>Associate User</small> 
                                        </dt>
                                        <dd>
                                            <%= f.collection_select( :user_id, User.all, :id, :full_name, {include_blank: true}, {id: "user_selection", class: "chosen-select"})%>
                                        </dd>
                                        <dd>
                                            <%= f.hidden_field :brand_id, value: @brand.id %>
                                            <button class="btn btn-primary btn-sm pull-right">Save</button>     
                                        </dd>
                                        
                                    </dl>
                                <% end %>
                                
                                <%= render 'users_brand', brand: @brand %>    
                                
                            </div>
                        </div>
                    </div>

                    <div class="ibox">
                        <div class="ibox-title text-info">
                            Order History
                        </div>
                        <div class="ibox-content">
                            <div class="table-responsive" style="overflow: visible;">
                                <table class="table table-hover issue-tracker">
                                    <tbody>
                                        <% @brand.orders.each do |order| %>
                                            <tr>
                                                <td class="issue-info" style="width: 20%;">
                                                    <a href="#">
                                                        <%= "Order-#{order.id}" %>
                                                    </a>

                                                    <small>
                                                        <%= order.created_at.strftime("%d-%b-%C %I:%M%P") %>
                                                    </small>
                                                </td>
                                                <td class="issue-info" style="width: 20%;">
                                                    <a href="#">
                                                        <%= order.customer.present? ? order.customer.customer_fullname : 'N/A' %>
                                                    </a>
                                                    <small>
                                                        Customer
                                                    </small>
                                                </td>
                                                <td class="issue-info" style="width: 10%;">
                                                    <a href="#">
                                                        <%= number_to_currency(order.total_cost, unit: "$ ", :precision => 2, :delimiter => ',') %>
                                                    </a>
                                                    <small>
                                                        Total Cost
                                                    </small>
                                                </td>
                                                <td class="issue-info" style="width: 10%;">
                                                    <a href="#">
                                                        <%= number_to_currency(order.total_discount, unit: "$ ", :precision => 2, :delimiter => ',') %>
                                                    </a>
                                                    <small>
                                                        Total Discount
                                                    </small>
                                                </td>
                                                <td style="width: 10%;">
                                                    <a class="btn btn-default btn-xs collapsed" data-toggle="collapse" href="#items-<%= order.id %>"> 
                                                        <i class="fa fa-sort-down"></i>
                                                        Items
                                                    </a>
                                                </td>
                                            </tr>
                                            <tr id="items-<%= order.id %>" class="panel-collapse collapse" aria-expanded="false">
                                                <td colspan="5">
                                                    <div>
                                                        <table class="table table-striped table-hover">
                                                            <tbody>
                                                                <% order.order_entries.each do |oe| %>
                                                                    <tr>
                                                                        <td class="client-avatar">
                                                                            <% if oe.product.image_data? %>
                                                                                <%= image_tag oe.product.image_url(:original), class: "img-circle m-b-md", style: "height: 30px; width: 30px; margin-bottom: 5px;" %>  
                                                                            <% else %>
                                                                                <%= image_tag 'default-product.png', class: "img-circle m-b-md", style: "height: 30px; width: 30px; margin-bottom: 5px;" %>  
                                                                            <% end %>
                                                                        </td>
                                                                        <td>
                                                                            <a data-toggle="tab" href="#contact-1" class="client-link"><%= oe.product.name %></a>
                                                                        </td>
                                                                        <td> <small>pcs: </small><strong><%= oe.quantity %></strong></td>
                                                                        <td> <small>price: </small><strong><%= number_to_currency(oe.price, unit: "$ ", :precision => 2, :delimiter => ',') %></strong></td>
                                                                        <td> <small>total: </small><strong><%= number_to_currency((oe.quantity.nil? ? 0 : oe.quantity) * (oe.price.nil? ? 0 : oe.price), unit: "$ ", :precision => 2, :delimiter => ',') %></strong> </td>
                                                                        <td class="client-status"><span class="label label-primary">Active</span></td>
                                                                    </tr>
                                                                <% end %>
                                                            </tbody>
                                                        </table>
                                                    </div>    
                                                </td>
                                            </tr>
                                           
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
</div>
<script type="text/javascript">
    $(function(){
        $('.chosen-select').chosen({width: "100%"});
    })
</script>