<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Products</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Dashboard', admin_root_path %>
            </li>
            <li>
              <%= link_to 'Products List', admin_products_path %>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins" style="font-size: 13px;">
        <div class="ibox-title">
                    <h5></h5>
                    <div class="ibox-tools">
                        <%= link_to 'Create New Product', new_admin_product_path, class: "btn btn-primary btn-sm" %>
                    </div>
                </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-list dataTable">
              <thead>
                          <tr role="row">
                            <th>Id</th>
                            <th>Name</th>
                            <th>Vendor</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th></th>
                        </thead>
                        <tbody>
                          <% @products.each do |product| %>
                            <tr>
                                <td><%= product.id %></td>
                                <td><%= product.name %></td>
                                <td><%= product.vendor.present? ? product.vendor.name : '' %></td>
                                <td><%= product.price %></td>
                                <td><%= product.category %></td>
                                <td>
                                  <div class="btn-group">
                                        <%= link_to 'Edit', edit_admin_product_path(product), class: "btn btn-xs btn-white" %>
                                        <button class="btn btn-xs btn-danger" type="button">Delete</button>
                                    </div>
                                </td>
                            </tr>
                          <% end %>
                        </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $('.dataTables-list').DataTable({
            pageLength: 25,
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy'},
                {extend: 'csv'},
                {extend: 'excel', title: 'ExampleFile'},
                {extend: 'pdf', title: 'ExampleFile'},

                {extend: 'print',
                 customize: function (win){
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                }
                }
            ]

        });

    });
</script>