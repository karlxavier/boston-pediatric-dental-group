<div class="row">
  <% results.each do |result| %>
    <%= link_to order_path(result), class: "col-md-4", remote: false do %>
        <div class="card flex-column mb-4 box-shadow h-md-250" style="box-shadow: 0 5px 15px rgba(33, 33, 33, .4);" >
            <div class="card-body d-flex flex-column align-items-start">
              <div class="card-body d-flex flex-column w-100 p-0">
                  <div class="d-flex justify-content-between w-100">
                      <div>
                          <%= result.brand_name %>
                      </div>
                      <div>
                          <%= time_ago_in_words(result.updated_at) %> ago.
                      </div>
                  </div>
                  <div class="mb-1 text-muted">
                      Lorem ipsum dolor
                  </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-between w-100">
                  <p class="card-text mb-auto">
                    <%= "Created on #{result.created_at.strftime('%m/%d/%Y')} by #{result.created_by_name}" %>
                  </p>
                  <p>
                      <%= "Ticket ##{result.id}" %>
                  </p>
              </div>
            </div>
        </div>
    <% end %>
  <% end %>
</div>