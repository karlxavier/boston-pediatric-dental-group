<tr class="nested-fields">
     <td>
          <%= f.collection_select(:product_id, 
               Product.order(:name),:id,:name, 
               {:prompt=>true},
               {id: "select-products", class: "select-products form-control", style: "min-width: 280px;", placeholder: "Product list", required: ""}) 
          %>
     </td>
     <td>
          <%= f.text_field :amount, class: "onlyNumeric form-control", placeholder: "Amount", required: "", style: "font-size: 15px; font-weight: 700; text-align: center;" %>
     </td>
     <td>
          <%= f.text_field :quantity, class: "onlyNumeric form-control", placeholder: "Quantity", required: "", style: "font-size: 15px; font-weight: 700; text-align: center;" %>
     </td>
     <td>
          <%= f.text_field :net_amount, class: "netAmount form-control", readonly: true, style: "font-size: 15px; font-weight: 700; text-align: center; color: #495057;" %>
     </td>
     <td>
          <%= link_to_remove_association f, class: "btn btn-white btn-sm removeProduct", style: "margin: 0;" do %>
               <i class="fa fa-times text-danger"></i>
          <% end %>  
     </td>

</tr>
