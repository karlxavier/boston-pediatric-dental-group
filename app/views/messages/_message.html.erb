<div class="feed-element" id="message-<%= message.id %>">
    <div class="media-body ">
        <small class="pull-right"><%= time_ago_in_words(message.created_at) %> ago</small>
        <strong><%= message.user.present? ? [message.user.first_name, message.user.last_name].join(' ') : "No User #{message.user_id}" %> </strong> <br>
        <small class="text-muted"><%= message.created_at %></small>
        <div id="msg_body_<%= message.id %>">
	        <%= render '/messages/message_body', message: message %>
	  	</div>
    </div>
</div>