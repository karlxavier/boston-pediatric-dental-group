<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Document Uploads</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Dashboard', admin_root_path %>
            </li>
            <li>
              <%= link_to 'Documents List', admin_document_uploads_path %>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">

        <%= flash_messages %>

      <div class="ibox float-e-margins" style="font-size: 13px;">
        <div class="ibox-title">
                    <h5></h5>
                    <div class="ibox-tools">
                        <%= link_to 'Upload New Document', new_admin_document_upload_path, class: "btn btn-primary btn-sm" %>
                    </div>
                </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-list dataTable">
              <thead>
                          <tr role="row">
                            <th>Id</th>
                            <th>Description</th>
                            <th>Filename</th>
                            <th></th>
                        </thead>
                        <tbody>
                          <% @document_uploads.each do |document| %>
                            <tr>
                                <td><%= document.id %></td>
                                <td><%= document.description %></td>
                                <td><%= document.id %></td>
                                <td>
                                  <div class="btn-group">
                                        <%= link_to 'Edit', edit_admin_document_upload_path(document), class: "btn btn-xs btn-white" %>
                                        <%= link_to 'Delete', admin_document_upload_path(document), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn btn-xs btn-danger" %>
                                    </div>
                                </td>
                            </tr>
                          <% end %>
                        </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $( document ).on('turbolinks:load', function() {
        if (! $('.dataTables-list').hasClass('initialized')) {
            $('.dataTables-list').not('.initialized').addClass('initialized').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'ExampleFile'},
                    {extend: 'pdf', title: 'ExampleFile'},

                    {extend: 'print',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]
            });
        }

        $(document).on('click', '#upload-hotels', function (e) {
          e.stopPropagation();
        });

    });
</script>