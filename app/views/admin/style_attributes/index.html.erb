<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Style Attributes</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Dashboard', admin_root_path %>
            </li>
            <li>
            	<%= link_to 'Style Attributes List', admin_style_attributes_path %>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins" style="font-size: 13px;">
				<div class="ibox-title">
                    <h5></h5>
                    <div class="ibox-tools">
                        <%= link_to 'Create New Style Attribute', new_admin_style_attribute_path, class: "btn btn-primary btn-sm" %>
                    </div>
                </div>
				<div class="ibox-content">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover dataTables-list dataTable">
							<thead>
		                    	<tr role="row">
		                    		<th>Id</th>
		                    		<th>Name</th>
		                    		<th>Product</th>
                                    <th>Value</th>
                                    <th>Default</th>
                                    <th>Height</th>
                                    <th>Width</th>
                                    <th>Finish</th>
		                    		<th></th>
		                    </thead>
		                    <tbody>
		                    	<% @style_attributes.each do |style_attribute| %>
			                    	<tr>
				                        <td><%= style_attribute.id %></td>
				                        <td><%= style_attribute.name %></td>
				                        <td><%= style_attribute.product.present? ? style_attribute.product.name : "No Product #{style_attribute.product_id}" %></td>
                                        <td><%= style_attribute.value %></td>
                                        <td><%= style_attribute.default %></td>
                                        <td><%= style_attribute.height %></td>
                                        <td><%= style_attribute.width %></td>
                                        <td><%= style_attribute.finish %></td>
				                        <td>
				                        	<div class="btn-group">
				                                <%= link_to 'Edit', edit_admin_style_attribute_path(style_attribute), class: "btn btn-xs btn-white" %>
				                                <button class="btn btn-xs btn-danger" type="button">Delete</button>
				                            </div>
				                        </td>
				                    </tr>
			                    <% end %>
		                    </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
    $( document ).on('turbolinks:load', function() {
       if (! $('.dataTables-list').hasClass('initialized')) {
            $('.dataTables-list').not('.initialized').addClass('initialized').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'ExampleFile'},
                    {extend: 'pdf', title: 'ExampleFile'},

                    {extend: 'print',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]
            });
        }

    });
</script>