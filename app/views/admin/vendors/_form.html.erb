<br>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">

        <% if @vendor.errors.any? %>
          <div class="alert alert-danger alert-dismissable">
              <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
              <ul style="margin-bottom: 0;">
                <% @vendor.errors.full_messages.each do |error_message| %>
                  <li>
                    <%= error_message if @vendor.errors.full_messages.first == error_message %> <br />
                  </li>
                <% end %>
              </ul>
          </div>
        <% end %>
        
        <%= form_for [:admin, @vendor], html: { class: "form-horizontal" } do |f| %>

          <div class="form-group">
              <label class="col-sm-2 control-label">Name</label>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group"><label class="col-sm-2 control-label">Brand/Company</label>
              <div class="col-sm-10">
                 <%= f.collection_select( :brand_id, Brand.all, :id, :name, {include_blank: true}, {id: "brand_selection", class: "chosen-select"})%>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Email</label>
              <div class="col-sm-10">
                <%= f.text_field :email, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Phone</label>
              <div class="col-sm-10">
                <%= f.text_field :phone, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Fax</label>
              <div class="col-sm-10">
                <%= f.text_field :fax, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group"><label class="col-sm-2 control-label">Country of Origin</label>
              <div class="col-sm-10">
                 <%= f.country_select( :country_origin, {}, {id: "country_origin_selection", class: "chosen-select"})%>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Active</label>
              <div class="col-sm-10">
                <%= f.check_box :active, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Lead Time</label>
              <div class="col-sm-10">
                <%= f.text_field :lead_time, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Bill From 1</label>
              <div class="col-sm-10">
                <%= f.text_field :bill_from_1, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Bill From 2</label>
              <div class="col-sm-10">
                <%= f.text_field :bill_from_2, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Bill From 3</label>
              <div class="col-sm-10">
                <%= f.text_field :bill_from_3, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Bill From 4</label>
              <div class="col-sm-10">
                <%= f.text_field :bill_from_4, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <label class="col-sm-2 control-label">Bill From 5</label>
              <div class="col-sm-10">
                <%= f.text_field :bill_from_5, class: "form-control" %>
              </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                  <%= link_to 'Cancel', admin_vendors_path, class: "btn btn-white" %>
                  <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                    Save changes
                  <% end %> 
              </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    $('.chosen-select').chosen({width: "100%"});
  })
</script>