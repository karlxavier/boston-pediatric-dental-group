<div class="row">
  <% results.each do |result| %>
    <div class="col-md-6">
      <div class="card flex-row mb-4 box-shadow h-md-250" style="box-shadow: 0 5px 15px rgba(33, 33, 33, .4);" >
          <div class="card-body d-flex flex-row align-items-start">
            <div class="col">
              <strong class="dflex">
                <span class="col-4 pl-0">
                  <%= result.user.full_name %>
                </span>
                <span>
                  <%= result.created_at.strftime('%I:%M %p %m/%d')%>
                </span>
              </strong>
              <p class="mt-1">
                <%= result.body %>
              </p>
              <div class="px-0" style="text-transform: uppercase; text-align: right;">
                <%= "Conversation in order #{result.chatroom_order_id}" %>
              </div>
            </div>            
          </div>
      </div>
    </div>
  <% end %>
</div>