<% if @patients_with_shares.present? %>
     <div class="col-lg-3">
     <div class="ibox">
          <div class="ibox-content">
               <div id="options" class="file-manager">
                         <h5>Patients</h5>
                         <div class="hr-line-dashed"></div>
                         
                         <% @patients_with_shares.each do |patient| %>
                              <%= link_to admin_shared_files_path(patient), class: "btn btn-outline btn-link", remote: true do %>
                                   <%= patient.full_name.present? ? patient.full_name : patient.email %>
                              <% end %>
                         <% end %>
                         <div class="clearfix"></div>
               </div>
          </div>
     </div>
     </div>
     <div class="col-lg-9">
          <div class="row">
               <div class="col-lg-12">
                    <div id="patient_files">
                         <%= render 'patient_files', patient: @patients_with_shares.first %>
                    </div>
               </div>
          </div>
     </div>
<% else %>
     <div class="col-md-6 offset-md-3">
          <div class="alert alert-warning">
               There are no patient shared files yet.
          </div>
     </div>
<% end %>
