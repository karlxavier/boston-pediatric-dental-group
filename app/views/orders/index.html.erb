<div class="row" style="position:relative;">
  <div id="left" class="col-lg-4 " style="height: {{screenHeight}}px; overflow-y: auto; overflow-x: hidden; padding-bottom: 5% !important;">
    <div class="card text-white border-secondary bg-info mb-3" ng-repeat="sale in sales" >
      <div class="card-body bg-light text-secondary">
        <div class="row">
          <div class="col">
            <p class="lead">
              {{sale.brand_branches}}
            </p>
            <h4>{{sale.brand_name}}</h4>
            <p class="lead">
              ORDER TICKET #{{sale.id}}
            </p>
          </div>
          <div class="col-2 text-right">
            <button class="btn btn-outline-dark" ng-click="viewOrders({{sale.id}})">View</button>
          </div>
        </div>

      </div>
      <div class="card-footer" style="text-transform: uppercase;">
        {{sale.created_date}} BY {{sale.created_by_name}}
      </div>
    </div>
  </div>
  <div class="col padding-left" style="height: {{screenHeight}}px; overflow-y: auto; overflow-x: hidden">
    <div class="row">
      <div class="col padding-left">
        <p class="lead">
          Updated {{order.updated_date}}
        </p>
        <h1>{{order.brand_name}}</h1>
        <p class="lead">
          {{order.brand_branches}}
        </p>
      </div>

      <div class="col text-right">
        <button class="btn btn-outline-dark" style="margin: 0% 1%;padding: .2% 5% !important;" ng-click="editOrder(order.id)">Edit</button>
        <button class="btn btn-default btn-yellow" style="margin: 0% 1%;padding: .2% 5% !important;" ng-click="newOrder()">Add</button>
      </div>

    </div>
