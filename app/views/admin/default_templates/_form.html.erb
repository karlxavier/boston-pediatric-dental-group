<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">

        <% if @default_template.errors.any? %>
          <div class="alert alert-danger alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
            <ul style="margin-bottom: 0;">
              <% @default_template.errors.full_messages.each do |error_message| %>
                <li>
                  <%= error_message %> <br />
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for [:admin, @default_template], html: { class: "form-horizontal" } do |f| %>

          <div class="form-group">
            <label class="col-sm-2 control-label">Message</label>
            <div class="col-sm-10">
              <%= f.text_area(:message, row: 100, class: "form-control textarea-format") %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%= link_to 'Cancel', admin_default_templates_path, class: "btn btn-white" %>
              <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                Save changes
              <% end %>
            </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(function(){
        $(".textarea-format").jqte({remove: false,rule: false,unlink: false, });
    })
</script>